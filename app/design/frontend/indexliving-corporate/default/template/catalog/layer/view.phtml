/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<?php if($this->canShowBlock()): ?>
<div class="block block-layered-nav<?php if (!$this->getLayer()->getState()->getFilters()): ?> block-layered-nav--no-filters<?php endif; ?>">
		<?php echo $this->getStateHtml() ?>
		<div class="layered-nav-content">
			<h2 id="title-filter-mobile" style="display:none;"><a id="close-filter" title="<?php echo $this->__('back')?>" href="javascript:void(0)"><?php echo $this->__('back')?></a><span><?php echo $this->__('Filter') ?></span></h2>
			<div class="block-content">	
					<?php if($this->canShowOptions()): ?>
							<p class="toggle-box-filter toggle-nav box-mobile"><span><?php echo $this->__('Filter') ?></span></p>
							<p class="toggle-box-filter toggle-sort-by box-mobile"><span><?php echo $this->__('Sort By') ?></span></p>
							<dl id="narrow-by-list" class="box-filter-content">
									<?php $_filters = $this->getFilters() ?>
									<?php $i=0; foreach ($_filters as $_filter): ?>
									<?php if($_filter->getItemsCount()): ?>
											<dt class="<?php echo $_filter->getBlockAlias();?>" id="<?php echo $_filter->getBlockAlias();?>"><?php echo $this->__($_filter->getName()) ?></dt>
											<dd><?php echo $_filter->getHtml() ?></dd>
									<?php endif; ?>
									<?php $i++; endforeach; ?>
							</dl>
							<script type="text/javascript">decorateDataList('narrow-by-list')</script>
					<?php endif; ?>
			</div>
		</div>	
</div>
<?php endif; ?>
