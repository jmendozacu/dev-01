<?php $_product = $this->getProduct(); ?>
<?php $_wishlistSubmitUrl = $this->helper('wishlist')->getAddUrl($_product);
	$customer = Mage::getSingleton('customer/session')->getCustomer();
	$inwishlist = false;
	$_currentwishlistitem = '';
	if($customer->getId())
	{
		$wishlist = Mage::getModel('wishlist/wishlist')->loadByCustomer($customer, true);
		$wishListItemCollection = $wishlist->getItemCollection();

		foreach ($wishListItemCollection as $item) {
			$_productwishlist = Mage::getModel('catalog/product')->setStoreId($item->getStoreId())->load($item->getProductId());
			if($_productwishlist->getId()==$_product->getId()){
				$_currentwishlistitem = $item;
				$inwishlist = true;
			}
		}
	}
	if($_currentwishlistitem!=''){
		$_wishlistRemoveUrl = $this->helper('wishlist')->getRemoveUrl($_currentwishlistitem);
	}
?>
<ul class="add-to-links">
	<?php if ($this->helper('wishlist')->isAllow()) : ?>
		<li class="wishlist-ajax add-wishlist">
			<a rel="" id="wishlist-detail-<?php echo $_product->getId()?>"
			   href="<?php if(!$inwishlist){
						echo $_wishlistSubmitUrl;
					}else{
						echo $_wishlistRemoveUrl;
					}
					?>"
			   class="link-wishlist<?php if(Mage::helper('customwishlist')->checkItemInWishlist($_product->getId())):?>-remove added-item<?php endif ?>">
				<?php echo $this->__('Add to Wishlist') ?>
			</a>
		</li>
	<?php endif;?>

	<?php
	$_compareUrl = $this->helper('catalog/product_compare')->getAddUrl($_product);
	$compared = false;
	$collection = $this->helper('catalog/product_compare')->getItemCollection();
	foreach($collection as $comparing_product) {
		if ($comparing_product->getId() == $_product->getId()) {
			$compared = true;
		}
	}
	?>
	<?php if($_compareUrl) : ?>
		<li class="add-compare" >
			<a href="javascript:void(0)" id="remodal" class="link-compare <?php if($compared):?>added-item<?php endif; ?> " onclick="ajaxCompare('<?php echo $_compareUrl?>')"><?php echo $this->__('Add to Compare') ?>
				<span id='ajax_compare_loading_<?php echo $_product->getId()?>' class="link_loader" style='display:none'><img src='<?php echo $this->getSkinUrl('images/review/loader.gif')?>'/></span>
			</a>
		</li>
	<?php endif; ?>
	<li >
		<a href="javascript:void(0)" id="shareProductLink" class="link-share"><?php echo $this->__('Share') ?></a>
		<?php echo $this->getChildHtml('sharing') ?>
	</li>
</ul>
<span class="mess_wishlish"></span>


<script type="text/javascript">
	function ajaxCompare(url){
		$j('#remodal').addClass('added-item');
		url = url.replace("catalog/product_compare/add","customcompare/product_compare/add");
		$j('#ajax_cart_loading').show();
		$j.ajax({
			url: url,
			type: "POST",
			dataType: 'json',
			success: function (data) {
				$j("#ajax_cart_loading").hide();
				$j("#product-compare-list").html(data.bar);
				//$j('.col-main .mess_succes').prepend('<ul class="messages"><li class="success-msg"><ul><li><span>'+ data.message + '</span></li></ul></li></ul>');
				$('ajaxcart-overlay').update(data.html);
				$('ajaxcart-overlay').show();
				setTimeout(function () {
					Effect.Fade($('ajaxcart-overlay'));
				}, 5000);
			}
		});
	}
</script>
