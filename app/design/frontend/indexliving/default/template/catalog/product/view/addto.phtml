<script type="text/javascript">
	function ajaxCompare(url){
		url = url.replace("catalog/product_compare/add","customcompare/product_compare/add");
		$j("#ajax_loader").show();
		$j.ajax({
			url: url,
			type: "POST",
			dataType: 'json',
			success: function (data) {
				$j("#ajax_loader").hide();
				$j('.block-compare').remove();
				$j(".compare_bar").html(data.bar);
				$j(".sider_bar").show();
				$j('.col-main .mess_succes').prepend('<ul class="messages"><li class="success-msg"><ul><li><span>'+ data.message + '</span></li></ul></li></ul>');
				setTimeout(function () {
					$j('.col-main').find('.messages').remove();
				}, 5000);
			}
		});


	}
	function ajaxwishlistdetail(id) {

		<?php if(!$this->helper('customer')->isLoggedIn()):?>
		window.location.href = "<?php echo Mage::getUrl('customer/account/login')?>";
		<?php endif; ?>
		<?php if($this->helper('customer')->isLoggedIn()):?>
		var url = '<?php echo $this->getUrl('customwishlist/index/add'); ?>';
			url += 'product/' + id;
		$j("#ajax_loader").show();
		$j.ajax({
			url: url,
			type: "GET",
			dataType: 'json',
			success: function (data) {
				$j('#wishlist-detail-'+id).addClass('added-item');
				$j("#ajax_loader").hide();
				$j('.col-main').prepend('<ul class="messages"><li class="success-msg"><ul><li><span>' + data.message + '</span></li></ul></li></ul>');
				setTimeout(function () {
					$j('.col-main').find('.messages').remove();
				}, 5000);
			}
		});
		<?php endif;?>
	}
</script>
