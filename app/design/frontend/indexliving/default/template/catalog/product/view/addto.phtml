<script type="text/javascript">
	function ajaxCompare(url,id){
		url = url.replace("catalog/product_compare/add","customwishlist/index/compare");
		url += '?isAjax/1/';
		$j("#ajax_loader").show();
		$j(".remodal").hide();
		$j.ajax({
			url: url,
			type: "POST",
			dataType: 'json',
			success: function (data) {
				$j("#ajax_loader").hide();
				$j(".popup_compare").html(data.popup);
				$j(".remodal").show();
				$j("#messages_product_view").html(data.message);
			}
		});
	}

	$j(".wishlist-ajax ").click(function(){
