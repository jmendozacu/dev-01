<?php if ($this->getReviewsCount()): ?>
	<div class="ratings">
		<h3 class="rating-overall"><?php echo $this->__('Overall Rating')?></h3>
		<?php if ($this->getRatingSummary()):?>
			<?php $ratingSummary = $this->getRatingSummary();?>
			<?php $ratingAverage = ($ratingSummary * 5)/100;?>
			<h1 class="rating-average"><?php echo $this->__('%.2f', $ratingAverage)?></h1>
			<div class="rating-summary">	
				<div class="rating-box-big">
						<div class="rating" style="width:<?php echo $this->getRatingSummary() ?>%"></div>
				</div>
				<span class="rating-count">(<?php echo $this->__('%d', $this->getReviewsCount()) ?>)</span>
			</div>
		<?php endif;?>
		<div class="rating-summary-details">
			<?php echo $this->getLayout()->createBlock('rating/entity_detailed')->setEntityId($this->getProduct()->getId())->toHtml() ?>
		</div>
	</div>
<?php elseif ($this->getDisplayIfEmpty()): ?>
	<div class="ratings">
		<h3 class="rating-overall"><?php echo $this->__('Overall Rating')?></h3>
		<h1 class="rating-average"><?php echo $this->__('%.2f', 0)?></h1>
		<div class="rating-box-big">
			<div class="rating" style="width:0%"></div>
		</div>
    <p class="no-rating" style="float:left; width:100%; margin:10px 0;"><?php echo $this->__('Be the first to review this product') ?></p>
	</div>	
<?php endif; ?>
