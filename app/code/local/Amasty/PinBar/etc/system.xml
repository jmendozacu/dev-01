<config>
    <sections>
        <ampinbar translate="label" module="ampinbar">
            <label>Admin Bookmarks</label>
            <tab>amasty</tab>
            <frontend_type>text</frontend_type>
            <sort_order>70519</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable>
                            <label><![CDATA[Enable Bookmarks Bar]]></label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enable>
                        <shared>
                            <label><![CDATA[Shared Bookmarks]]></label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[If set to "Yes", all admin users share the same list of bookmarks.]]></comment>
                        </shared>
                    </fields>
                </general>
            </groups>
        </ampinbar>
    </sections>
</config>